<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operaciones matematicas"
            android:layout_gravity="" android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/descarga" />


        <EditText
            android:id="@+id/campo1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textAlignment="center"
            android:hint="Ingresar  Numero 1"/>
        android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/campo2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textAlignment="center"
            android:hint="Ingresar  Numero 2"/>
        
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <Button
                android:id="@+id/btnSumar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:onClick="onClick"
                android:layout_marginEnd="309dp"
                android:text="+"

                android:textSize="16sp" />

            <Button
                android:id="@+id/btnRestar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:onClick="onClick"
                android:layout_marginEnd="212dp"
                android:text="-"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnMultiplicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:onClick="onClick"
                android:layout_marginEnd="114dp"
                android:text="x"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnDivision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:onClick="onClick"
                android:layout_marginEnd="15dp"
                android:text="/"
                android:textSize="16sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/etiResultado"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Resultado"
            android:textAlignment="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>